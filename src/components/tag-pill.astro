---
export interface Props {
    tag: string;
}

const { tag } = Astro.props;
---
<a href={`${import.meta.env.BASE_URL}tags/` + tag}>
{tag}
</a>

<style>
a {
    text-decoration: none;
    font-size: small;
    background-color: var(--color-bg-secondary);
    border-radius: 32px;
    color: var(--color-text);
    padding-left: 0.5em;
    padding-right: 0.5em;
    font-weight: bold;
}

a:hover {
    color: var(--color-accent-secondary)
}
</style>
